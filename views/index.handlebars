{{> header}}
  <main>
    <h2>Welcome to the Gallery Walk</h2>
    <p class="introText">Use the gallery below to mark the pieces of artwork that you would like to see when visiting our museum! All you need to do is click on the piece for more information and add it to your favorites and a guide will be developed for you.</p>
    <section id="workItems">
      {{#each rows}}
      <a href="/work/{{id}}">
        <div class="item-img-container">
          <img src="/images/{{image}}" alt='{{name}}' class="workBorder"/>
        </div>
     <!--   <p>{{name}}</p> -->
        <p>{{artist_name}}</p>
      </a>
      {{/each}}
    </section>
  </main>
{{> footer}}